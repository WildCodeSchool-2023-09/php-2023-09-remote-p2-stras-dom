<form method="post" enctype="multipart/form-data">
	<fieldset class="uk-fieldset">

		<legend class="uk-legend">Nouveau service</legend>

		<div class="uk-margin">
			<input class="uk-input" type="text" name="name" placeholder="Nom" value="{{ service.name }}" aria-label="Input">
		</div>

		<div class="uk-margin">
			<textarea id="summernote" class="uk-textarea" rows="5" name="description" placeholder="Description" aria-label="Textarea">{{ service.description }}</textarea>
		</div>

		<div class="uk-margin">
			<div class="uk-inline">
				<span class="uk-form-icon uk-form-icon-flip">€</span>
				<input class="uk-input" type="number" name="price" value="{{ service.price }}" aria-label="Not clickable icon">
			</div>
		</div>

		{% if service.image is defined %}
			{% set image = service.image %}
		{% else %}
			{% set image = "/assets/images/course.jpeg" %}
		{% endif %}

		<div class="uk-margin">
			<div uk-form-custom>
				<input type="file" aria-label="Custom controls" name="image[]" id="image" accept="image/jpeg, image/jpg, image/png, image/webp">
				<button class="uk-button uk-button-default" type="button" tabindex="-1">Télécharger une image</button>
			</div>
		</div>

		{% if service.id is defined %}
			{% set button = "Modifier" %}
		{% else %}
			{% set button = "Ajouter" %}
		{% endif %}

		<input type="hidden" name="id" value="{{ service.id }}">

		<div class="uk-margin">
			<button type="submit" name="submit" class="uk-button uk-button-primary">{{button}}
				Service</button>
		</div>
	</fieldset>
</form>
