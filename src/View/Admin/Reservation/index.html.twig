{% extends 'admin.html.twig' %}

{% block content %}

	<div uk-grid>
		<div>
			<div class="uk-card uk-card-default uk-card-body">
				<h3 class="uk-card-title">test</h3>
				<a class="uk-button uk-button-primary" href="/admin/prestations/new">ajouter un nouveau service</a>
				<table id="yavuz" class="uk-table uk-table-hover uk-table-divider">
					<thead>
						<tr>
							<th>Date</th>
							<th>Service</th>
							<th>Utilisateur</th>
						</tr>
					</thead>
					<tbody>

						{% for reservation in reservations %}
							<tr>
								<td>{{ reservation.date|date('Y-m-d H:i:s') }}</td>
								<td>{{ reservation.service_name }}</td>
								<td>{{ reservation.firstname }}
									{{ reservation.lastname }}</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="6">pas donn√©es</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}

{% block javascript %}
	{{ parent()}}
	<script>
		new DataTable('#yavuz');
	</script>
{% endblock %}
