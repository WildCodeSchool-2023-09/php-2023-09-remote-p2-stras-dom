{% extends 'layout.html.twig' %}

{% block content %}

    <div class="uk-position-center">
        <form method="post">
            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input class="uk-input" type="text" name="username" aria-label="Not clickable icon">
                    {% if errors.username is defined %} 
                          <div class="uk-alert-danger" uk-alert>
                            <a href class="uk-alert-close" uk-close></a>
                            <p>{{ errors.username }}</p>
                        </div>
                     {% endif %}
                </div>
            </div>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
                    <input class="uk-input" type="password" name="password" aria-label="Not clickable icon">
                    {% if errors.password is defined %} 
                          <div class="uk-alert-danger" uk-alert>
                            <a href class="uk-alert-close" uk-close></a>
                            <p>{{ errors.password }}</p>
                        </div>
                     {% endif %}
                </div>
            </div>

            <button class="uk-button uk-button-primary uk-width-1-1">Login !</button>

        </form>
    </div>

{% endblock %}